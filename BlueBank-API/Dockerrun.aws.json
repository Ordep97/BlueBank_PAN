{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "db",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/db",
      "hostname": "db",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ]
    },
    {
      "name": "api",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/app-api",
      "hostname": "api",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ]
    }
  ]
}